<script type="text/javascript">
    var url;
    $(function () {
        $('#Status').combo({
            required: true,
            editable: false,
            panelHeight: 45
        });
    })

    function addClick() {
        $('#dlg').dialog('open').dialog('setTitle', '新增');
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        $('#fm').form('clear');
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#c1').combo({
            hasDownArrow: true
        });
        $('#c2').combo({
            hasDownArrow: true
        });
        url = '/Job/Create/';
    };

    function save() {
        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.show({
                        title: '成功',
                        msg: result.msg
                    });
                    $('#dlg').dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.show({
                        title: '错误',
                        msg: result.msg
                    });
                    $('#details').datagrid('reload');
                }
            }
        });
    }
</script>

<div id="dlg" class="easyui-dialog" modal="true"  style="width:360px;height:280px;padding:2px 2px"  closed="true" buttons="#dlg-buttons">
		<div class="easyui-layout" fit="true">
			<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; " >     
	            <form id="fm" method="post" novalidate>
                     <table width="360">
                      <tr>
                        <td width="60">岗位编码:</td>
                        <td width="168"><input name="JobCode" class="easyui-validatebox" required="true"/>
                        <input name="ID"  style="display:none" /></td>
                        
                      </tr>
                        <tr>
                        <td width="60">岗位名称：</td>
                        <td width="168"><input name="JobName" class="easyui-validatebox" required="true"/></td>
                      </tr>                      
                      <tr>
                      <td width="60">是否可用：</td>
                        <td><select id="Status" name="IsActive" class="easyui-combobox" required="true" style="width: 80px">
		                        <option value="1">可用</option>
		                        <option value="0">不可用</option>
	                        </select>
	                    </td>
                      </tr>
                      <tr>
                        <td width="60">描述:</td>
                        <td width="168" colspan="3" ><textarea name="Description" style="width: 160px; height: 60px"></textarea> </td>
                      </tr>
                    </table>
	            </form>
            </div>
        </div>
</div>
<div id="dlg-buttons">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">确定</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
</div>
