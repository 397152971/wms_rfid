<script type="text/javascript">
    function deleteClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '删除');
            $('#fm .easyui-validatebox').validatebox({
                required: false
            });
            $('form input').attr("disabled", "disabled");
            $('form textarea').attr("disabled", "disabled");
            $('#cc').combo({
                hasDownArrow: false
            });
            $('#fm').form('load', row);
            if (row.Status == '是') {
                $('#cc').combo('setValue', true).combo('setText', row.Status);
            } else {
                $('#cc').combo('setValue', false).combo('setText', row.Status);
            }
            url = '/Role/Delete/?RoleID=' + row.RoleID;
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>
