<script type="text/javascript">
    $(function () {
        $('#IfAdvance').combo({
            editable: false,
            panelHeight: 45
        });
    })

    function searchClick() {
        $('#dlg-search').dialog('open').dialog('setTitle', '积压产品清单-库区查询');
    };

    function select() {
        var queryParams = $('#masters').datagrid('options').queryParams;
        queryParams.Warehouse = $('#warehouse').val();
        queryParams.WarehouseArea = $('#warehouseArea').val();
        queryParams.IfAdvance = $('#ifAdvance').val();
        $('#masters').datagrid('options').queryParams = queryParams;
        $('#masters').datagrid({
            pageNumber: 1,
            pageSize: 10
        });
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close');
    }

</script>

<div id="dlg-search" class="easyui-dialog" modal="true" style="width:300px;height:210px;padding:2px 2px"
		closed="true" buttons="#dlg-buttons-search">
    <div class="easyui-layout" fit="true">
		<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; " >   
            <table width="250">
              <tr>
                <td width="60">仓库</td>
                <td width="140" align="right"><select id="warehouse" class="easyui-combobox" style="width: 140px"></td>
              </tr>
              <tr>
                <td>库区</td>
                <td width="140" align="right"><select id="warehouseArea" class="easyui-combobox" style="width: 140px"></td>
              </tr>
              <tr>
                <td>是否切换高级查询</td>
                <td align="left">      
		            <select id="IfAdvance" name="status" required="true" class="easyui-combobox" style="width: 50px">
                       <option value="false">禁用</option>
		                <option value="true">启用</option>
	                </select>
	            </td>
              </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-search">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="select()">查询</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">取消</a>
</div>
