<script type="text/javascript">
function deleteClick() {
    var row = $('#details').datagrid('getSelected');
    if (row) {
        url = '/Employee/Delete/?demployeeId=' + row.ID;
        $('#dlg').dialog('open').dialog('setTitle', '删除');
        $('#fm .easyui-validatebox').validatebox({
            required: false
        });        
        $('#IsActive').combo({
            hasDownArrow: false
        });        
        if (row.Status == '可用') {
            $('#IsActive').combo('setValue', 1).combo('setText', row.Status);
        } else {
            $('#IsActive').combo('setValue', 0).combo('setText', row.Status);
        }
        $('#fm').form('load', row);
        $('form input').attr("disabled", "disabled");
        $('form textarea').attr("disabled", "disabled");
    } else {
        $.messager.confirm('错误', '没有选择行！');
    }
};
</script>
