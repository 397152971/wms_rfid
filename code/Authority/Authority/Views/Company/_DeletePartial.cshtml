<script type="text/javascript">
    function deleteClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            url = '/Company/Delete/?companyID=' + row.ID;
            $('#dlg').dialog('open').dialog('setTitle', '删除');
            $('#companyfm .easyui-validatebox').validatebox({
                required: false
            });
            $('form input').attr("disabled", "disabled");
            $('form textarea').attr("disabled", "disabled");
            $('#IsActive').combo({
                hasDownArrow: false
            });
            $('#companyfm').form('load', row);
            if (row.Status == '启用') {
                $('#IsActive').combo('setValue', 1).combo('setText', row.IsActive);
            } else {
                $('#IsActive').combo('setValue', 0).combo('setText', row.IsActive);
            }
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>
