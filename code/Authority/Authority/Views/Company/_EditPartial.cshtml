<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            url = '/Company/Edit/';
            $('#dlg').dialog('open').dialog('setTitle', '编辑');
            $('#companyfm .easyui-validatebox').validatebox({
                required: true
            });
            $('#IsActive').combo({
                hasDownArrow: true
            });
            if (row.Status == '可用') {
                $('#IsActive').combo('setValue', 1).combo('setText', row.IsActive);
            } else {
                $('#IsActive').combo('setValue', 0).combo('setText', row.IsActive);
            }            
            $('#companyfm').form('load', row);
            $('form input').removeAttr("disabled");
            $('form textarea').removeAttr("disabled");          
            
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>
   