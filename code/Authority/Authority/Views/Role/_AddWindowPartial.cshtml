			<div region="center" border="false" style="padding:10px;background:#fff;border:1px solid #ccc;">
               <div style="width:230px;background:#fafafa;padding:10px;">
		          <div style="padding:3px 2px;border-bottom:1px solid #ccc">Ajax Form</div>
		            <form id="f1" action="/Account/LogOn" method="post">
			            <table>
				            <tr>
					            <td>Name:</td>
					            <td><input name="userName" type="text"></input></td>
				            </tr>
				            <tr>
					            <td>Email:</td>
					            <td><input name="password" type="text"></input></td>
				            </tr>
				            <tr>
					            <td>Phone:</td>
					            <td><input name="rememberMe" type="text"></input></td>
				            </tr>
				            <tr>
					            <td></td>
					            <td><input type="submit" value="Submit"></input></td>
				            </tr>
			            </table>
		            </form>
	            </div>
