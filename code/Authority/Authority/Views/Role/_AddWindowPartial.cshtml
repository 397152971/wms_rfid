<script type="text/javascript">
    $(function () {
        $('#w_LogOn').window({
            title: '登录 system',
            width: 600,
            modal: true,
            shadow: false,
            closed: true,
            height: 300,
            //            closable: false,
            resizable: false,
            minimizable: false,
            maximizable: false,
            collapsible: false
        });

        $('#add').click(function () {
            $('#w_LogOn').window('open');
        })

        $('#f1').form({
            success: function (data) {
                if (data == 'true') {
                    $('#w_LogOn').window('close');
                    location.href = '/Home/Index';
                } else {
                    $.messager.confirm('系统提示', '用户登录失败！用户名或密码不正确！', function (r) {
                        if (r) {
                            location.href = '/Account/LogOff';
                        }
                    });
                }
            }
        });

        function edit() {
            $('#w_LogOn').window('open');
        }

    });
</script>
