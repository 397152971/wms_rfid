<script type="text/javascript">
    $(function () {
        $('#User_Add').window({
            title: '新增模块',
            width: 600,
            modal: true,
            shadow: false,
            closed: true,
            height: 300,
            //            closable: false,
            resizable: false,
            minimizable: false,
            maximizable: false,
            collapsible: false
        });

        $('#add').click(function () {
            $('#User_Add').window('open');
            $("input[type=text]").attr("value", "");
        })

        //表单提交返回数据
        $('#UserFromAdd').form({
            success: function (data) {
                if (data == 'true') {
                    $.messager.show({
                        title: '系统提示',
                        msg: '新增成功！',
                        showType: 'slide'
                    });
                    $('#User_Add').window('close');
                    $("#details").datagrid('reload');
                } else {
                    $.messager.show({
                        title: '系统提示',
                        msg: '新增失败！请检查输入信息！', showType: 'slide'
                    });
                }
            }
        });
    });

</script>

