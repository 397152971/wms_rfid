<script type="text/javascript">
    var url;
    $(function () {
        $('#c1').combo({
            required: true,
            editable: false,
            panelHeight: 45
        });

        $('#c2').combo({
            required: true,
            editable: false,
            panelHeight: 45
        });
    })

    function addClick() {
        $('#dlg').dialog('open').dialog('setTitle', '新增');
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        $('#fm').form('clear');
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#c1').combo({
            hasDownArrow: true
        });
        $('#c2').combo({
            hasDownArrow: true
        });
        url = '/User/Create/';
    };

    function save() {
        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.show({
                        title: '成功',
                        msg: result.msg
                    });
                    $('#dlg').dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.show({
                        title: '错误',
                        msg: result.msg
                    });
                    $('#details').datagrid('reload');
                }
            }
        });
    }
</script>

    <div id="dlg" class="easyui-dialog" modal="true" 
        style="width:410px;height:290px;padding:2px 2px"
        closed="true" buttons="#dlg-buttons">
		<div class="easyui-layout" fit="true">
			<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; " >     
	            <form id="fm" method="post" novalidate>
                    <table  border="0" align="center" style="margin:auto; width:100%; height:100%">
				            <tr>
					            <td >用户名</td>
					            <td align="left"><input name="UserName" type="text" class="easyui-validatebox" required="true" missingmessage="请输入用户名" /></td>
                                <td align="left">是否锁定</td>
					            <td align="left">
                                    <select id="c1" name="IsLock" class="easyui-combobox" style="width: 50px">
                                        <option value="true">是</option>
                                        <option value="false">否</option>
                                    </select>                                </td>
				            </tr>
				            <tr>
					            <td>中文名称</td>
					            <td align="left"><input name="ChineseName" type="text"  /></td>
					            <td align="left">是否管理员</td>
					            <td align="left">
                                    <select id="c2" name="IsAdmin" class="easyui-combobox" style="width: 50px">
                                        <option value="true">是</option>
                                        <option value="false">否</option>
                                    </select>                                </td>
				            </tr>
				            <tr>
					            <td>用户密码</td>
				              <td  align="left">
                                <input class="pwd" name="Pwd" type="password"/>
                              </td>
							  <td></td>
							  <td></td>
							  </tr>

							  <tr>
                                <td style="vertical-align: top; text-align: left">描述</td>
					            <td colspan="3"  align="left"><textarea name="Memo" style="width: 300px; height: 100px"></textarea>                                </td>
						    </tr>                         
		              </table>

	            </form>
            </div>
        </div>
    </div>
<div id="dlg-buttons">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">确定</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
</div>
