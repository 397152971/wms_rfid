<script type="text/javascript">
    $(function () {
        $('#status').combo({
            editable: false,
            panelHeight: 45
        });
    })

    function searchClick() {
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    };

    function select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.SystemName = $('#systemname').val();
        queryParams.Description = $('#description').val();
        queryParams.Status = $('#status').val();
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 10
        }); 
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close'); 
    }

</script>

<div id="dlg-search" class="easyui-dialog" modal="true"  style="width:360px;height:320px;padding:2px 2px"
        closed="true" buttons="#dlg-buttons">
