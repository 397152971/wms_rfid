<script type="text/javascript">
    var url;
    $(function () {
        $('#cc').combo({
            required: true,
            editable: false,
            panelHeight: 45
        });
    })

    function addClick() {
        $('#dlg').dialog('open').dialog('setTitle', '新增');
        $('#fm').form('clear');
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#cc').combo({
            hasDownArrow: true
        });
        url = '/Department/Create/';
    };

    function save() {
        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.show({
                        title: '成功',
                        msg: result.msg
                    });
                    $('#dlg').dialog('close'); 
                    $('#details').datagrid('reload'); 
                } else {
                    $.messager.show({
                        title: '错误',
                        msg: result.msg
                    });
                    $('#details').datagrid('reload');
                }
            }
        });
    }
</script>
    <div id="dlg" class="easyui-dialog" modal="true"  style="width:540px;height:340px;padding:2px 2px"  closed="true" buttons="#dlg-buttons">
		<div class="easyui-layout" fit="true">
			<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; " >     
	            <form id="fm" method="post" novalidate>
                    <table width="520">
                      <tr>
                        <td width="60" align="right">部门名称：</td>
                        <td width="168"><input name="DepartmentCode" class="easyui-validatebox" required="true"/></td>
                        <td width="60" align="right">部门编码：</td>
                        <td width="168"><input name="DepartmentName" class="easyui-validatebox" required="true"/></td>
                      </tr>
                      <tr>
                       <td  align="right">负责人名称：</td>
                        <td ><input name="DepartmentLeaderID" class="easyui-validatebox" required="true"/></td>
                        <td align="right">公司编码：</td>
                        <td ><input name="CompanyID" class="easyui-validatebox" /></td>
                      </tr>
                      <tr>
                        <td align="right">上级编码：</td>
                        <td><input name="ParentDepartmentID" class="easyui-validatebox" />
	                    </td>
                        <td align="right">是否可用：</td>
                        <td><select id="Active" name="IsActive" class="easyui-combobox" style="width: 80px">
		                        <option value="1">可用</option>
		                        <option value="0">不可用</option>
	                        </select>
	                    </td>
                      </tr>
                      <tr>
                       <td align="right">统一编码：</td>
                        <td width="168" colspan="3">
                        <input name="UniformCode" required="true" type="text" />
                        </td>
                      </tr>
                       <tr>
                       <td width="60" align="right">描述：</td>
                        <td width="168" colspan="3" ><textarea name="Description" style="width: 380px; height: 80px"></textarea> </td>
                      </tr>
                    </table>
	            </form>
            </div>
        </div>
    </div>
<div id="dlg-buttons">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">确定</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
</div>
