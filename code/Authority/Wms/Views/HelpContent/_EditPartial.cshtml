<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '删除目录信息');
            $('#helpfm.easyui-validatebox').validatebox({
                required:  true
            });
            $('form input').removeAttr("disabled");
            $('#IsActive').combo({
                hasDownArrow: true
            });
            $('#helpfm').form('load', row);
            if (row.Status == '启用') {
                $('#IsActive').combo('setValue', true).combo('setText', row.IsActive);
            } else {
                $('#IsActive').combo('setValue', false).combo('setText', row.IsActive);
            }
            url = '/HelpContent/Edit/';
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    }
</script>