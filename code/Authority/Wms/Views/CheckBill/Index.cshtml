<div region="center" split="true" border="false" style="border-bottom-style: solid; border-bottom-width: 1px; border-bottom-color: #99BBE8">    
    <table id="details" class="easyui-datagrid" border="false" singleSelect="true"
        fit="true" toolbar="#tool"  pagination="true" rownumbers="true">
        <thead>
            <tr>
                <th field="BillNo" width="80" hidden="true">盘点单号</th>
                <th field="BillDate" width="160" >制单日期</th>
                <th field="BillTypeCode" width="160" >单据类型</th>
                <th field="WarehouseCode" width="160">仓库名称</th>
                <th field="OperatePersonCode" width="160">制单人</th>
                <th field="Status" width="160">处理状态</th>
                <th field="VerifyPersonCode" width="160">审核人</th>
                <th field="VerifyDate" width="160">审核时间</th>
            </tr>
        </thead>
    </table>
</div>
<div region="south" split="true" border="false" style="height: 250px; border-top-style: solid; border-top-width: 1px; border-top-color: 99BBE8;">
<table id="detail" class="easyui-datagrid" border="false" singleSelect="true" fit="true" pagination="true" rownumbers="true">
        <thead>
            <tr>
                <th field="ID" width="80" hidden="true">细单号</th>
                <th field="BillNo" width="120" >盘点单号</th>
                <th field="CellCode" width="120" >货位名称</th>
                <th field="StorageCode" width="120">储存名称</th>
                <th field="ProductCode" width="120">产品名称</th>
                <th field="UnitCode" width="120">单位名称</th>
                <th field="Quantity" width="120">数量</th>
                <th field="RealQuantity" width="120">实际数量</th>
                <th field="OperatePersonCode" width="120">作业人员</th>
                <th field="StartTime" width="120">开始时间</th>
                <th field="FinishTime" width="120">结束时间</th>
                <th field="Status" width="120">完成状态</th>
            </tr>
        </thead>
    </table>
</div>