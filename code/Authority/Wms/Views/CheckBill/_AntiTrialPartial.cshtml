<script type="text/javascript">
    function antitrialClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            if (row.Status != "已审核") {
                $.messager.confirm('错误', '该记录状态不是已录入状态无法反审！');
            } else {
                $('#checkdlg').dialog('open').dialog('setTitle', '反审盘点主单信息');
                $('#checkBillDeatilShow').datagrid({ url: '/CheckBill/CheckBillDetails/?BillNo=' + row.BillNo }); //加载明细
                $('#checkfm .easyui-validatebox').validatebox({
                    required: false
                });
                $('form input').attr("disabled", "disabled");
                $('form textarea').attr("disabled", "disabled");
                $('#checkcc').combo({
                    hasDownArrow: false
                });
                $('#checkfm').form('load', row);
                if (row.IsActive == '可用') {
                    $('#checkcc').combo('setValue', true).combo('setText', row.IsActive);
                } else {
                    $('#checkcc').combo('setValue', false).combo('setText', row.IsActive);
                }
                url = '/CheckBill/checkBillMasterAntiTrial/?BillNo=' + row.BillNo;
            }
        } else {
            $.messager.confirm('错误', '没有选择行，无法反审！');
        }
    }
</script>
@Html.Partial("_CheckShowPartial")

