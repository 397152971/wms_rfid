<script type="text/javascript">   
    $(function () {
        $('#departNameDetail').datagrid({
            //双击赋值
            onDblClickRow: function () {
                departNameSave();
            }
        })
        //属性初始化
        $('#queryTypeDepartname').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 100
        })
    });
    //选中赋值
    function departNameSave() {
        var departNameRow = $('#departNameDetail').datagrid('getSelected');
        if (departNameRow) {
            $('#departId').val(departNameRow.ID);
            $('#departName').val(departNameRow.DepartmentName);
            $('#departNameData').dialog('close');
        }
        else {
            $.messager.alert('提示', '没有选择行!', 'info');
        }
    }
    //根据条件查询
    function departNameQueryClick() {
        $("#departNameDetail").datagrid({
            url: '/Department/GetDepartment/?queryString=' + $('#queryTypeDepartname').combogrid('getValue') + '&value=' + $('#departNameInfo').val()
        });
        $("#departNameDetail").datagrid('reload');
    }

</script>
<div id="departNameData" class="easyui-dialog" modal="true" style="width: 500px;
    height: 420px; padding: 0px 0px" closed="true" buttons="#dlgProduct-buttons">
    <div id="btnQuery">
        <select id="queryTypeDepartname" class="easyui-combobox" style="width: 100px;" readonly="true">
            <option value="DepartmentCode">部门编码</option>
            <option value="DepartmentName">部门名称</option>
        </select>
        <input id="departNameInfo">
        <a href="#" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="departNameQueryClick()"
            id="departNameQuery">查询</a>
    </div>
    <div split="true" border="false" style="width: 486px; height: 320px;">
        <table id="departNameDetail" class="easyui-datagrid" border="false" toolbar="#btn-query"
            singleselect="true" fit="true" fitcolumns="true" pagination="true" rownumbers="true">
            <thead>
                <tr>
                    <th field="ID" hidden="true" width="60">
                        部门ID
                    </th>
                    <th field="DepartmentCode" width="60">
                        部门编号
                    </th>
                    <th field="DepartmentName" width="60">
                        部门名称
                    </th>
                    <th field="IsActive" width="60">
                        是否可用
                    </th>
                </tr>
            </thead>
        </table>
    </div>
    <div id="dlgDepart-buttons" style="float:right; margin-top:10px; margin-right:10px;">
        <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="departNameSave()">确定</a>
        <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#departNameData').dialog('close')">
            取消</a>
    </div>
</div>
