
<!DOCTYPE HTML>
<html>
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
		<title>库存利用分析</title>
		<script type="text/javascript" src="/Content/Scripts/jquery-easyui-1.3/jquery-1.7.2.min.js"></script>
		<script type="text/javascript">
		    $(function () {
		         $.getJSON('/StorageAnalysis/Details/', function (data) {
		            // Create the chart
		            window.chart = new Highcharts.StockChart({
		                chart: {
		                    renderTo: 'container'
		                },

		                rangeSelector: {
		                    selected: 1
		                },

		                title: {
		                    text: '库存变化分析'
		                },

		                yAxis: {
		                    title: {
		                        text: '库存总量（件）'
		                    },
		                    plotLines: [{
		                        value: 6000,
		                        color: 'yellow',
		                        dashStyle: 'shortdash',
		                        width: 2,
		                        label: {
		                            text: '黄色警报线'
		                        }
		                    }, {
		                        value: 7500,
		                        color: 'red',
		                        dashStyle: 'shortdash',
		                        width: 2,
		                        label: {
		                            text: '红色警报线'
		                        }
		                    }]
		                },

		                series: [{
		                    name: '库存总量',
		                    data: data,
		                    tooltip: {
		                        valueDecimals: 4
		                    }
		                }]
		            });
		        });
		    });

		</script>
	</head>
	<body>
<script src="/Content/Scripts/highstock/highstock.js" type="text/javascript"></script>
<script src="/Content/Scripts/highstock/modules/exporting.js" type="text/javascript"></script>

@*<script type="text/javascript" src="/Content/Scripts/highstock/themes/skies.js"></script>*@
<div id="container" style="height: 500px; min-width: 500px"></div>

	</body>
</html>

