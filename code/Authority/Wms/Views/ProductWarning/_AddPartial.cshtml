 <script type="text/javascript">
    var url;
    function addClick() {
        $('#dlg').dialog('open').dialog('setTitle', '新增');
        $('#Productfm').form('clear');
        $('#p').attr("readonly", false);
        $('#Productfm .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");

        url = '/ProductWarning/Create/';
    };
    //选择产品信息
    function productSelect() {
        $('#productData').dialog('open').dialog('setTitle', '选择产品信息');
        $('#productDetail').datagrid({ url: '/StockInBill/GetProductDetails/' });
        $("#productDetail").datagrid('reload');
    }
    </script>
  <div id="dlg" class="easyui-dialog" modal="true" 
        style="width:745px;height:440px;padding:2px 2px"
        closed="true" buttons="#dlg-buttons">
		<div class="easyui-layout" fit="true">
			<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; " >     
	            <form id="Productfm" method="post" novalidate>
                    <table >
                        <tr>
                            <td>产品编码</td>
                            <td><input name="ProductCode" id="productCode" required="true">
                            <a href="#" onclick="productSelect()" class="easyui-linkbutton" iconcls="icon-search" plain="true"></a></td>
                        </tr>
                        <tr>
                            <td style=" text-align:right">产品名称</td>
                            <td align="left"><input type="text" name="ProductName" class="easyui-validatebox" required="true" id="productName" readonly="true"/></td>
                        </tr>
                        <tr>
                            <td>数量下限</td>
                            <td><input name="minLimited" /></td>
                        </tr>
                        <tr>
                            <td>数量上限</td>
                            <td><input name="maxLimited" /></td>
                        </tr>
                        <tr>
                            <td>积压时间</td>
                            <td><input name="assemblyTime" /></td>
                        </tr>
                        <tr>
                            <td>备注</td>
                            <td colspan="5">><textarea name="memo" style="height: 50px;width:210px;"></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>
    </div>
    <div id="dlg-buttons">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">确定</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
</div>
