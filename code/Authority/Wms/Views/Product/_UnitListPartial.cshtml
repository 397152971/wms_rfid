<script type="text/javascript">
    function UnitlistQueryClick() {
        $('#dlg-Unitlistsearch').dialog('open').dialog('setTitle', '查询厂商信息');
        $("input[type=text]").attr("value", "");
    };

    function unitlistSave() {
        var unitlistRow = $('#unitlistDetail').datagrid('getSelected');
        if (unitlistRow) {
            $('#unitlistCode').val(unitlistRow.UnitListCode);
            $('#unitlistData').dialog('close');
        }
    }
</script>
<div id="unitlistData" class="easyui-dialog" modal="true" style="width: 500px; height: 500px;
    padding: 2px 2px" closed="true" buttons="#dlgUnitlist-buttons">
    <div split="true" border="false" style="width: 480px; height: 425px">
        <table id="unitlistDetail" class="easyui-datagrid" border="false" toolbar="#btn-query4"
            singleselect="true" fit="true" fitcolumns="true" pagination="true" rownumbers="true">
            <thead>
                <tr>
                    <th field="UnitlistCode" width="80" hidden="true">
                        计量单位系列编码
                    </th>
                    <th field="UniformCode" width="100">
                        统一编码
                    </th>
                    <th field="UnitListName" width="80">
                        计量单位系列名称
                    </th>
                    <th field="IsActive" width="80">
                        是否可用
                    </th>
                    <th field="UpdateTime" width="80">
                        更新时间
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div id="dlgUnitlist-buttons">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="unitlistSave()">确定</a> <a
        href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#unitlistData').dialog('close')">
        取消</a>
</div>
<div id="btn-query4">
 <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="UnitlistQueryClick()" id="UnitlistQuery">查询</a> 
</div>
