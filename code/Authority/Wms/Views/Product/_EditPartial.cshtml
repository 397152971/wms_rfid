<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '编辑卷烟信息');
            $('#Productfm').form('load', row);
            $('#Productfm .easyui-validatebox').validatebox({
                required: true
            });
            if (row.IsActive == '启用') {
                $('#cc').combo('setValue', 1).combo('setText', row.IsActive);
            } else {
                $('#cc').combo('setValue', 0).combo('setText', row.IsActive);
            }
            $('form input').removeAttr("disabled");
            $('form textarea').removeAttr("disabled");
//            $('#brandCode').attr("readonly", true);
//            $('#supplierCode').attr("readonly", true);
            $('#cc').combo({
                hasDownArrow: true
            });
            url = '/Product/Edit/';
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>