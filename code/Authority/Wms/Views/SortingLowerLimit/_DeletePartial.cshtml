<script type="text/javascript">
function deleteClick() {
    var row = $('#details').datagrid('getSelected');
    if (row) {
        $('#dlg').dialog('open').dialog('setTitle', '删除');
        $('#LowerLimitfm .easyui-validatebox').validatebox({
            required: false
        });
        $('form input').attr("disabled", "disabled");
        $('form textarea').attr("disabled", "disabled");
        $('#IsActiveCc').combo({
            hasDownArrow: false
        });
        $('#LowerLimitfm').form('load', row);
        if (row.IsActive == '可用') {
            $('#IsActiveCc').combo('setValue', 1).combo('setText', row.IsActive);
        } else {
            $('#IsActiveCc').combo('setValue', 0).combo('setText', row.IsActive);
        }
        url = '/SortingLowerLimit/Delete/?id=' + row.ID;
    } else {
        $.messager.confirm('错误', '没有选择行！');
    }
};
</script>
