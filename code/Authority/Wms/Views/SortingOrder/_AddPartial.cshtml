<script type="text/javascript">
    var url;
    $(function () {
        $('#cc').combo({
            required: true,
            editable: false,
            panelHeight: 45
        });
    })

    function addClick() {
        $('#dlg').dialog('open').dialog('setTitle', '新增');
        $('#fm').form('clear');
        $('#fm .easyui-validatebox').validatebox({
            required: true
        });
        $('form input').removeAttr("disabled");
        $('form textarea').removeAttr("disabled");
        $('#cc').combo({
            hasDownArrow: true
        });
    };

    function save() {
        $('#fm').form('submit', {
            url: url,
            onSubmit: function () {
                return $(this).form('validate');
            },
            success: function (result) {
                var result = eval('(' + result + ')');
                if (result.success) {
                    $.messager.show({
                        title: '成功',
                        msg: result.msg
                    });
                    $('#dlg').dialog('close');
                    $('#details').datagrid('reload');
                } else {
                    $.messager.show({
                        title: '错误',
                        msg: result.msg
                    });
                    $('#details').datagrid('reload');
                }
            }
        });
    }
</script>

    <div id="dlg" class="easyui-dialog" modal="true"  style="width:360px;height:320px;padding:2px 2px"
        closed="true" buttons="#dlg-buttons">
		<div class="easyui-layout" fit="true">
			<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc;" >     
	            <form id="sortingfm" method="post" novalidate>
                    <table width="360">
                     <tr>
                        <td width="60">分拣线编码：</td>
                        <td width="168"><input name="sortingLineId" class="easyui-validatebox" required="true"/></td>
                      </tr>
                      <tr>
                        <td width="60">分拣线名称：</td>
                        <td width="168"><input name="sortingLineName" class="easyui-validatebox" required="true"/></td>
                      </tr>
                      <tr>
                        <td width="60">卷烟编码：</td>
                        <td width="168"><input name="productCode" class="easyui-validatebox" required="true"/></td>
                      </tr>
                      <tr>
                        <td width="60">卷烟名称：</td>
                        <td width="168"><input name="productName" class="easyui-validatebox" required="true"/></td>
                      </tr>
                      <tr>
                        <td width="60">卷烟单位：</td>
                        <td width="168"><input name="productUnit" class="easyui-validatebox" required="true"/></td>
                      </tr>                     
                      <tr>
                        <td>是否启用：</td>
                        <td><select id="cc" name="Status" class="easyui-combobox" style="width:80px">
		                        <option value="true">启用</option>
		                        <option value="false">禁用</option>
	                        </select>
	                    </td>
                      </tr>
                      <tr>
                        <td width="60">备注：</td>
                        <td width="168"><input name="Remarks" class="easyui-validatebox" required="true"/></td>
                      </tr>
                    </table>
	            </form>
            </div>
        </div>
    </div>
<div id="dlg-buttons">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">确定</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
</div>
