<script type="text/javascript">
    function applyClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $.ajaxSender.send('/StockInTask/Operate/',
                        {
                            'id': row.ID,
                            'status': '1'
                        },
                        function (data) {
                            $('#details').datagrid('reload');
                        });
        } else {
            $.messager.alert('系统提示', '未选中行', 'info');
        }
    }
</script>
