<script type="text/javascript">
    $(function () {
        $('#taskNo').combo({
            editable: false,
            panelHeight: 50
        });
    })
    function searchClick() {
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
    }
    function select() {
        var billNo = $('#comboBillNo').combo('getValue');        
        $("#details").datagrid({
            url: '/StockInTask/Search/?billNo=' + billNo
        });
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close');
    }
</script>
<div id="dlg-search" class="easyui-dialog" modal="true" style="width: 340px; height: 150px;
    padding: 2px 2px" closed="true" buttons="#dlg-buttons-search">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" style="padding: 10px 10px; background: #fff;
            border: 1px solid #ccc;">
            <table width="300">
                <tr>
                    <td width="200">
                        请选择要进行作业的单据：
                    </td>
                    <td width="150">
                        <select id="comboBillNo" class="easyui-combobox" style="width: 120px;">
                            <option value="0d5424-46-e3">0d5424-46-e3</option>
                            <option value="1209210001IN">1209210001IN</option>
                        </select>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-search">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="select()">查询</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">
        取消</a>
</div>
