<script type="text/javascript">
    function SearchLoad() {
        $('#isActive').combo({
            editable: false,
            panelHeight: 45,
            panelWidth: 130
        });
    }

    function searchClick() {
        SearchLoad();
        $('#dlg-search').dialog('open').dialog('setTitle', '查询');
        $("input[type=text]").attr("value", "");
    };

    function select() {
        var queryParams = $('#details').datagrid('options').queryParams;
        queryParams.DepartmentCode = $('#DepartmentCode').val();
        queryParams.DepartmentName = $('#DepartmentName').val();
        queryParams.DepartmentLeaderID = $('#employeename-id').val();
        queryParams.CompanyID = $('#companyname-id').val();
        $('#details').datagrid('options').queryParams = queryParams;
        $('#details').datagrid({
            pageNumber: 1,
            pageSize: 10
        });
        $("#details").datagrid('reload');
        $('#dlg-search').dialog('close');
    }

</script>
<div id="dlg-search" class="easyui-dialog" modal="true" style="width: 280px; height: 260px;
    padding: 2px 2px" closed="true" buttons="#dlg-buttons-search">
    <div class="easyui-layout" fit="true">
        <div region="center" border="false" style="padding: 10px 10px; background: #fff;
            border: 1px solid #ccc;">
            <table width="250">
                <tr>
                    <td width="60">
                        部门编码：
                    </td>
                    <td width="168" align="left">
                        <input id="DepartmentCode" type="text"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        部门编码：
                    </td>
                    <td align="left">
                        <input id="DepartmentName" type="text" />
                    </td>
                </tr>
                <tr>
                    <td>
                        负责人：
                    </td>
                    <td colspan="3" align="left">
                        <input type="text" id="employeename-id" style="display: none;" />
                        <input type="text" id="employeename-name" />
                        <a href="#" id="departmentleader-link" class="easyui-linkbutton" iconcls="icon-search"
                            plain="true" onclick="departmentLeaderSearchClick()"></a>
                    </td>
                </tr>
                <tr>
                    <td>
                        所在公司：
                    </td>
                    <td colspan="3" align="left">
                        <input type="text" id="companyname-id" style="display: none;" />
                        <input type="text" id="companyname-name" />
                        <a href="#" id="companyname-link" class="easyui-linkbutton" iconcls="icon-search"
                            plain="true" onclick="companySearchClick()"></a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-search">
    <a href="#" class="easyui-linkbutton" iconcls="icon-ok" onclick="select()">查询</a>
    <a href="#" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">
        取消</a>
</div>
