<script type="text/javascript">

    function UnitQueryClick3() {
        $('#unitDetail3').datagrid({ url: '/Unit/GetDetails/?QueryString=' + $('#queryType3').combobox('getValue') + '&Value=' + $('#UnitInfo3').val() });
        $("#unitDetail3").datagrid('reload');
    };

    function unitSave3() {
        var unitRow = $('#unitDetail3').datagrid('getSelected');
        if (unitRow) {
            $('#unitCode03').val(unitRow.UnitCode);
            $('#unitName03').val(unitRow.UnitName);
            $('#unitCode3').val(unitRow.UnitCode);
            $('#unitName3').val(unitRow.UnitName);
            count3 = unitRow.COUNT;
            if (count2 != null) {
                $('#quantity02').val(count2 / count3);
            }
            if (count4 != null) {
                $('#quantity03').val(count3 / count4);
            }
            $('#unitData3').dialog('close');
        }
    }

    $(function () {
        $('#queryType').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 100
        });
        $('#unitDetail3').datagrid({
            onDblClickRow: function () {
                unitSave3();
            }
        })
    });
</script>
<div id="unitData3" class="easyui-dialog" modal="true" style="width: 500px; height: 500px;
    padding: 0px 0px" closed="true" buttons="#dlgUnit-buttons">
    <div split="true" border="false" style="width: 486px; height: 430px">
        <table id="unitDetail3" class="easyui-datagrid" border="false" 
        toolbar="#btn-query3"
            singleselect="true" fit="true" fitcolumns="true" pagination="true" rownumbers="true">
            <thead>
                <tr>
                    <th field="UnitCode" width="80">
                        计量单位编码
                    </th>
                    <th field="UnitName" width="80">
                        计量单位名称
                    </th>
                    <th field="COUNT" width="80">
                        支数
                    </th>
                    <th field="IsActive" width="80">
                        是否可用
                    </th>
                    <th field="UpdateTime" width="80">
