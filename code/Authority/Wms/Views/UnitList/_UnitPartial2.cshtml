<script type="text/javascript">

    function UnitQueryClick2() {
        $('#unitDetail2').datagrid({ url: '/Unit/GetDetails/?QueryString=' + $('#queryType2').combobox('getValue') + '&Value=' + $('#UnitInfo2').val() });
        $("#unitDetail2").datagrid('reload');
    };

    function unitSave2() {
        var unitRow = $('#unitDetail2').datagrid('getSelected');
        if (unitRow) {
            $('#unitCode02').val(unitRow.UnitCode);
            $('#unitName02').val(unitRow.UnitName);
            $('#unitCode2').val(unitRow.UnitCode);
            $('#unitName2').val(unitRow.UnitName);
            count2 = unitRow.COUNT;
            if (count1 != null) {
                $('#quantity01').val((count1 / count2) + ":1");
            }
            if (count3 != null) {
                $('#quantity02').val((count2 / count3) + ":1");
            }
            $('#unitData2').dialog('close');
        }
    }

    $(function () {
        $('#queryType').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 100
        });
        $('#unitDetail2').datagrid({
            onDblClickRow: function () {
                unitSave2();
            }
        })
    });
</script>
