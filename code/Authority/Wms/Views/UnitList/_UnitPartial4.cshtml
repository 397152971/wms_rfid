<script type="text/javascript">

    function UnitQueryClick4() {
        $('#unitDetail4').datagrid({ url: '/Unit/GetDetails/?QueryString=' + $('#queryType4').combobox('getValue') + '&Value=' + $('#UnitInfo4').val() });
        $("#unitDetail4").datagrid('reload');
    };

    function unitSave4() {
        var unitRow = $('#unitDetail4').datagrid('getSelected');
        if (unitRow) {
            $('#unitCode04').val(unitRow.UnitCode);
            $('#unitName04').val(unitRow.UnitName);
            $('#unitCode4').val(unitRow.UnitCode);
            $('#unitName4').val(unitRow.UnitName);
            count4 = unitRow.COUNT;
            if (count3 != null) {
                $('#quantity03').val(count3 / count4);
            }
            $('#unitData4').dialog('close');
        }
    }

    $(function () {
        $('#queryType').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 100
        });
        $('#unitDetail4').datagrid({
            onDblClickRow: function () {
                unitSave4();
            }
        })
    });
</script>
