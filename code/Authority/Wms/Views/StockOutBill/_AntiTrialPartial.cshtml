<script type="text/javascript">
    function antitrialClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            if (row.Status != "已审核") {
                $.messager.confirm('错误', '该记录状态不是已录入状态无法反审！');
            } else {
                isOutBillMasterAdd = false;
                isShowOutBillDetail = true;
                $('#deleteBillDetail').attr("disabled", "disabled");
                $('#editBillDetail').attr("disabled", "disabled");
                $('#addBillDetail').attr("disabled", "disabled");
                $('#dlg').dialog('open').dialog('setTitle', '反审出库主单信息');
                $('#outBillDeatil').datagrid({ url: '/StockOutBill/OutBillDetails/?BillNo=' + row.BillNo }); //加载明细
                $('#fm .easyui-validatebox').validatebox({
                    required: false
                });
                $('form input').attr("disabled", "disabled");
                $('form textarea').attr("disabled", "disabled");
                $('#cc').combo({
                    hasDownArrow: false
                });
                $('#fm').form('load', row);
                if (row.IsActive == '可用') {
                    $('#cc').combo('setValue', true).combo('setText', row.IsActive);
                } else {
                    $('#cc').combo('setValue', false).combo('setText', row.IsActive);
                }
                url = '/StockOutBill/outBillMasterAntiTrial/?BillNo=' + row.BillNo;
            }
        } else {
            $.messager.confirm('错误', '没有选择行，无法反审！');
        }
    }
</script>


