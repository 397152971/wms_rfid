<script type="text/javascript">

    function customer_QueryClick2() {
        $('#customer_Detail2').datagrid({ url: '/Customer/C_Details/?QueryString=' + $('#queryType2').combobox('getValue') + '&Value=' + $('#customerInfo2').val() });
        $("#customer_Detail2").datagrid('reload');
    };

    function customer_Save2() {
        var customerRow = $('#customer_Detail2').datagrid('getSelected');
        if (customerRow) {
            $('#companyCode').val(customerRow.CompanyCode);
            $('#customer_Data2').dialog('close');
        }
    }

    $(function () {
        $('#queryType').combo({
            required: true,
            editable: false,
            panelHeight: 45,
            panelWidth: 100
        });
        $('#customer_Detail2').datagrid({
            onDblClickRow: function () {
                customer_Save2();
            }
        })
    });
</script>
<div id="customer_Data2" class="easyui-dialog" modal="true" style="width: 500px; height: 500px;
    padding: 0px 0px" closed="true" buttons="#dlg_customer2_buttons">
    <div split="true" border="false" style="width: 486px; height: 430px">
        <table id="customer_Detail2" class="easyui-datagrid" border="false" 
        toolbar="#btn-query2" pageSize="50"
