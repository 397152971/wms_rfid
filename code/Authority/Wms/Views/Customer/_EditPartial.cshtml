<script type="text/javascript">
    function editClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            $('#dlg').dialog('open').dialog('setTitle', '编辑客户信息');
            $('#customerfm.easyui-validatebox').validatebox({
                required:  true
            });
            $('form input').removeAttr("disabled");
            $('#IsActive').combo({
                hasDownArrow: true
            });
            $('#customerfm').form('load', row);
            if (row.IsActive == "可用") {
                $('#C_isActive').combo('setValue', 1).combo('setText', row.IsActive);
            } else {
                $('#C_isActive').combo('setValue', 0).combo('setText', row.IsActive);
            }
            url = '/Customer/Edit/';
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    }
</script>