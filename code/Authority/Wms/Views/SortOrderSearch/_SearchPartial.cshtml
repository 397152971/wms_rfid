<script type="text/javascript">
    $(function () {
        $('#sortOrderDate').datebox({
            required: false
        });
    })

    function searchClick() {
        $('#dlg-search').dialog('open').dialog('setTitle', '分拣单查询');
        $("input[type=text]").attr("value", "");
    };

    function select() {
        var queryParams = $('#masters').datagrid('options').queryParams;
        queryParams.SortOrderNo = $('#sortOrderNo').val();
        queryParams.SortOrderDate = $('#sortOrderDate').val();
        queryParams.SortOrderType = $('#sortOrderType').val();
        queryParams.CustomerCode = $('#customerCode').val();
        queryParams.CustomerName = $('#customerName').val();
        queryParams.TotalQuantity = $('#totalQuantity').val();
        queryParams.DeliverRoute = $('#deliverRoute').val();
        $('#masters').datagrid('options').queryParams = queryParams;
        $('#masters').datagrid({
            pageNumber: 1,
            pageSize: 10
        });
        $("#masters").datagrid('reload');
        $('#dlg-search').dialog('close');
    }

</script>

<div id="dlg-search" class="easyui-dialog" modal="true" style="width:300px;height:350px;padding:2px 2px"
		closed="true" buttons="#dlg-buttons-search">
    <div class="easyui-layout" fit="true">
		<div region="center" border="false" style="padding:10px 10px;background:#fff;border:1px solid #ccc; " >   
            <table align="left" width="260">
              <tr>
                <td width="60">订单单号:</td>
                <td><input id="sortOrderNo"   type="text" style="width: 140px"></td>
              </tr>
              <tr>
                <td width="60">订单日期:</td>
                <td><input id="sortOrderDate"   type="text" style="width: 140px"></td>  
              </tr>
              <tr>
                <td width="60">订单类型:</td>
                <td><input id="sortOrderType"   type="text" style="width: 140px"></td>
              </tr>
              <tr>
                <td width="60">客户编号:</td>
                <td><input id="customerCode"   type="text" style="width: 140px"></td>
              </tr>
              <tr>
                <td width="60">客户名称:</td>
                <td><input id="customerName"   type="text" style="width: 140px"></td>                
              </tr>
              <tr>
                <td width="60">总 数 量:</td>
                <td><input id="totalQuantity"   type="text" style="width: 140px"></td>                
              </tr>
              <tr>
                <td width="60">送货路线:</td>
                <td><input id="deliverRoute"   type="text" style="width: 140px"></td>
              </tr>
            </table>
        </div>
    </div>
</div>
<div id="dlg-buttons-search">
	<a href="#" class="easyui-linkbutton" iconCls="icon-ok" onclick="select()">查询</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg-search').dialog('close')">取消</a>
</div>