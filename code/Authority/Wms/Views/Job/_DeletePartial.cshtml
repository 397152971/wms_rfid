<script type="text/javascript">
    function deleteClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            url = '/Job/Delete/?jobId=' + row.ID;
            $('#fm').form('load', row);
            $('#dlg').dialog('open').dialog('setTitle', '删除');
            $('#fm .easyui-validatebox').validatebox({
                required: false
            });
            $('#isActive_job').combo({
                hasDownArrow: false
            });
            if (row.IsActive == '可用') {
                $('#isActive_job').combo('setValue', 1).combo('setText', row.IsActive);
            } else {
                $('#isActive_job').combo('setValue', 0).combo('setText', row.IsActive);
            }
            $('form input').attr("disabled", "disabled");
            $('form textarea').attr("disabled", "disabled");
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>
