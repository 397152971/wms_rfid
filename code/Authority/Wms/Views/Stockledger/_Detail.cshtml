<script type="text/javascript">
    function F_Quantity(val, row) {
        if (row.Status == "0") {
            return '<span style="color:red;">' + val + '</span>';
        } else {
            return val;
        }
    }
</script>
<div id="InfoDetails" class="easyui-dialog" modal="true" 
        style="width:800px;height:420px;padding:2px 2px"
        closed="true">    
    <table id="infos" class="easyui-datagrid"
        url="" border="false" singleSelect="true"
        fit="true" fitColumns="true"   pagination="true" rownumbers="true">
        <thead>
            <tr>
                <th field="BillDate" width="80">日期</th>
                <th field="BillNo" width="100">单据编号</th>
                <th field="BillTypeName" width="80">单据业务</th>
                <th field="ProductCode" width="80">商品代码</th>
                <th field="ProductName" width="140">商品名称</th>
                <th field="RealQuantity" width="80" formatter="F_Quantity">账面数量</th>
                <th field="UnitName" width="80">单据单位</th>
                <th field="JQuantity" width="100">数量（自然件）</th>
                <th field="TQuantity" width="80">数量（自然条）</th>
            </tr>
        </thead>
    </table>
</div>