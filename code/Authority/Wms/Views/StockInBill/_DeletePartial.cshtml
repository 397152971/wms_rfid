
<script type="text/javascript">
    function deleteClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            isInBillMasterCanEdit = true;
            if (row.Status != "已录入") {
                $.messager.confirm('错误', '该记录状态不是已录入状态无法删除！');
            } else {
                $('#dlg').dialog('open').dialog('setTitle', '删除入库主单信息');
                $('#inBillDetail').datagrid({ url: '/StockInBill/InBillDetails/?BillNo=' + row.BillNo });
                $('#fm .easyui-validatebox').validatebox({
                    required: false
                });
                $('form input').attr("disabled", "disabled");
                $('form textarea').attr("disabled", "disabled");
                $('#cc').combo({
                    hasDownArrow: false
                });
                $('#fm').form('load', row);
                if (row.IsActive == '可用') {
                    $('#cc').combo('setValue', true).combo('setText', row.IsActive);
                } else {
                    $('#cc').combo('setValue', false).combo('setText', row.IsActive);
                }
                url = '/StockInBill/Delete/?BillNo=' + row.BillNo;
            }
        } else {
            $.messager.confirm('错误', '没有选择行！');
        }
    };
</script>


