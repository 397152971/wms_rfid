<script type="text/javascript">
    function settleClick() {
        var row = $('#details').datagrid('getSelected');
        if (row) {
            if (row.Status != "执行中") {
                $.messager.confirm('错误', '该记录状态不是执行中状态无法结单！');
            } else {
                $.messager.confirm('结单', '确认要结单吗？未完成的入库单结单后将无法在操作！结单有风险！操作需谨慎！', function (r) {
                    if (r) {
                        $.getJSON('/StockInBill/inBillMasterSettle/', { BillNo: row.BillNo }, function (json) {
                            if (json) {
                                if (json.success) {
                                    $.messager.show({
                                        title: '成功',
                                        msg: json.msg
                                    });
                                    $('#details').datagrid('load');
                                } else {
                                    $.messager.alert(g_MsgBoxTitle, json.msg + '<br />' + json.data, "error");
                                    $('#details').datagrid('load');
                                }
                            }
                        });
                    }
                });
            }
        } else {
            $.messager.confirm('错误', '没有选择行，无法结单！');
        }
    }
</script>